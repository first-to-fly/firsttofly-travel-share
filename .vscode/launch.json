  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug",
      "runtimeExecutable": "${workspaceFolder}/pipeline/debug",
      "env": {
        "NODE_DEBUG_PORT": "9229"
      },
      "console": "integratedTerminal", // "internalConsole" cannot auto-attach!
      "autoAttachChildProcesses": true,
      "port": 9229
    },
    {
      "type": "node",
      "request": "attach",
      "name": "Attach",
      "port": 9229
    }
  ]
}
